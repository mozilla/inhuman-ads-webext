{

  "manifest_version": 2,
  "name": "Inhuman Ads",
  "version": "0.2",

  "description": "Report screenshots of bad ads on Inhuman Ads",

  "icons": {
    "48": "icons/inhuman-ads-48.png"
  },

  "background": {
    "scripts": [
      "common/buildSettings.js",
      "common/log.js",
      "common/catcher.js",
      "common/makeUuid.js",
      "background/communication.js",
      "background/auth.js",
      "background/main.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "*://screenshots.firefox.com/*",
        "*://inhumanads.com/*",
        "*://inhuman.sandmill.org/*",
        "*://localhost/*",
        "*://localhost:8888/*"
      ],
      "js": [
        "vendor/jquery/dist/jquery.min.js",
        "common/buildSettings.js",
        "common/log.js",
        "common/catcher.js",
        "content/callBackground.js",
        "content/main.js"
      ]
    }
  ],
  "permissions": [
    "cookies",
    "storage",
    "<all_urls>",
    "*://localhost:8888/*"
  ]
}
